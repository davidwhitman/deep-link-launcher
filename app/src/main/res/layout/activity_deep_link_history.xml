<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/deep_link_history_root"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical"
        tools:context="com.thunderclouddev.deeplink.ui.activities.DeepLinkHistoryActivity">

        <android.support.v7.widget.CardView
            android:id="@+id/deepLink_card_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/spacingSmall">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/spacingSmall"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/deepLink_paste"
                    android:layout_width="@dimen/icon_size"
                    android:layout_height="@dimen/icon_size"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:paddingBottom="1dp"
                    android:paddingEnd="2dp"
                    android:paddingStart="2dp"
                    android:paddingTop="3dp"
                    android:src="@drawable/ic_content_paste_black_24dp"
                    android:tint="?android:colorAccent" />

                <EditText
                    android:id="@+id/deepLink_edittext_input"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:hint="@string/deep_link_search_hint"
                    android:imeOptions="actionGo"
                    android:inputType="textUri"
                    android:minHeight="@dimen/spacingSmall"
                    android:paddingEnd="@dimen/spacingTiny"
                    android:paddingStart="@dimen/spacingSmall" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/gray" />

                <ImageView
                    android:id="@+id/deepLink_btn_go"
                    android:layout_width="@dimen/icon_size"
                    android:layout_height="@dimen/icon_size"
                    android:layout_marginStart="@dimen/spacingSmall_half"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:src="@drawable/deeplink_btn_go"
                    android:tint="@color/accent_or_disabled"
                    android:tintMode="src_in" />

            </LinearLayout>
        </android.support.v7.widget.CardView>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <ListView
                android:id="@+id/deepLink_listView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:divider="@color/gray"
                android:listSelector="?attr/selectableItemBackground"
                android:paddingEnd="@dimen/activity_horizontal_medium_margin"
                android:paddingStart="@dimen/activity_horizontal_medium_margin" />

            <ProgressBar
                android:id="@+id/progress_wheel"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="center" />
        </FrameLayout>

        <LinearLayout
            android:id="@+id/shortcut_hint_banner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/black"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingBottom="12dp"
            android:paddingEnd="16dp"
            android:paddingStart="16dp"
            android:paddingTop="12dp"
            android:visibility="gone">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/spacingSmall"
                android:layout_weight="1"
                android:text="@string/deepLink_longPress_hint_message"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/shortcut_hint_banner_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/spacingSmall"
                android:text="@string/deepLink_longPress_hint_accept"
                android:textColor="@color/yellow"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>
</FrameLayout>