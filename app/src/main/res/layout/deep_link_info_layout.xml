<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="link"
            type="com.thunderclouddev.deeplink.models.DeepLinkInfo"/>
    </data>

    <LinearLayout
        android:id="@+id/deepLinkItem_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?selectableItemBackground"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/spacingTiny"
        android:paddingTop="@dimen/spacingTiny">

        <ImageView
            android:id="@+id/deepLinkItem_icon"
            android:layout_width="@dimen/appIconSize"
            android:layout_height="@dimen/appIconSize"
            android:adjustViewBounds="true"
            android:padding="@dimen/spacingTiny"
            android:scaleType="fitXY"
            android:src="@drawable/link"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacingTiny"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="@dimen/spacingTiny">

            <TextView
                android:id="@+id/deepLinkItem_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="false"
                android:textColor="@color/black"
                android:textSize="@dimen/textSubtitle"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/deepLinkItem_packageName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:singleLine="true"/>

        </LinearLayout>

        <ImageView
            android:id="@+id/deepLinkItem_overflow"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginEnd="@dimen/spacingSmall_half"
            android:layout_marginStart="@dimen/spacingSmall_half"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:scaleType="center"
            android:src="@drawable/ic_overflow"
            android:tint="@color/grayDark"/>
    </LinearLayout>
</layout>